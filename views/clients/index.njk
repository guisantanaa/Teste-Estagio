{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <a href="/clients/create">Novo</a>
   <table width="100%">
       <thead>
           <tr>
               <th>Nome do cliente</th>
               <th>CPF do cliente</th>
               <th>Ação</th>

               
           </tr>
       </thead>
       <tbody>
           {% for client in clients %}
           <tr>
               <td>{{ client.name }}</td>
               <td>{{ client.cpf }}</td>
               <td><a href="/clients/{{client.id}}">ver</td>

           </tr>
           {% endfor %}
       </tbody>
   </table>
</div>

{% endblock content %}

